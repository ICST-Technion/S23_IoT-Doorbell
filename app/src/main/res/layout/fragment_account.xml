<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.account.AccountFragment">

<TextView
    android:id="@+id/landlord_title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="90dp"
    android:text="Landlord:"
    android:textSize="20sp"
    android:textColor="#103663"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/poppinsbold"
    android:textAlignment="textStart"
    android:letterSpacing="0.05"
    android:lineSpacingMultiplier="1.2" />

<TextView
    android:id="@+id/landlord_name_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/landlord_title_text"
    android:layout_marginTop="5dp"
    android:text="Rony Julisburger"
    android:textSize="18sp"
    android:textColor="#103663"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/poppinsregular"
    android:textAlignment="textStart"
    android:letterSpacing="0.05"
    android:lineSpacingMultiplier="1.2" />

<TextView
    android:id="@+id/address_title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/landlord_name_text"
    android:layout_marginTop="20dp"
    android:text="Address:"
    android:textSize="20sp"
    android:textColor="#103663"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/poppinsbold"
    android:textAlignment="textStart"
    android:letterSpacing="0.05"
    android:lineSpacingMultiplier="1.2" />

<TextView
    android:id="@+id/address_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/address_title_text"
    android:layout_marginTop="5dp"
    android:text="Neve Sha'anan, Haifa"
    android:textSize="18sp"
    android:textColor="#103663"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/poppinsregular"
    android:textAlignment="textStart"
    android:letterSpacing="0.05"
    android:lineSpacingMultiplier="1.2" />

<TextView
    android:id="@+id/message_title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/address_text"
    android:layout_marginTop="20dp"
    android:text="Message for visitors:"
    android:textSize="20sp"
    android:textColor="#103663"
    android:layout_marginLeft="20dp"
    android:fontFamily="@font/poppinsbold"
    android:textAlignment="textStart"
    android:letterSpacing="0.05"
    android:lineSpacingMultiplier="1.2" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Upload message for visitors"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:padding="10dp"
        android:layout_below="@+id/message_title_text"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/file_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="No file selected"
        android:textColor="#103663"
        android:layout_below="@+id/upload_button"
        android:layout_alignParentStart="true"
        android:padding="10dp"/>


</RelativeLayout>